{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--bin",
				"main"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run"
		},
		{
			"type": "process",
			"command": "trunk",
			"options": {
				"cwd": "./main"
			},
			"args": [
				"serve"
			],
			"label": "trunk serve",
			"problemMatcher": []
		},
		{
			"type": "cargo",
			"command": "watch",
			"args": ["-x", "build", "-d", ".5"],
			"options": {
				"cwd":"engine_editor"
			},
			"group": "build",
			"label": "watch engine_editor"
		},
	]
}